<UserControl x:Class="Emu5.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emu5"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="textBlockTabText" Text="Sample text" FontSize="13" Margin="2" />
        <Button Name="buttonCloseTab" Width="14" Height="14" Margin="2" Background="Transparent" BorderBrush="Transparent" Click="buttonCloseTab_Click">
            <Image Source="Icons/close_tab.png" />
        </Button>
    </StackPanel>
</UserControl>
