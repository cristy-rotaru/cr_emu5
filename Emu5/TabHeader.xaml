<UserControl x:Class="Emu5.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <TextBlock Name="textBlockTabText" FontSize="13" Margin="2" />
        <Button Name="buttonCloseTab" Width="14" Height="14" Margin="2" Background="Transparent" BorderBrush="Transparent" Click="buttonCloseTab_Click">
            <Image Source="Icons/close_tab.png" />
        </Button>
    </StackPanel>
</UserControl>
