<UserControl x:Class="Emu5.TerminalSettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontSize="13">
    <StackPanel>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,4,0" Text="Text color:" />
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,4,4,0" Text="Background color:" />

                <ComboBox Name="comboBoxTextColor" Grid.Row="0" Grid.Column="1" Width="154" IsEditable="False" />
                <ComboBox Name="comboBoxBackgroundColor" Grid.Row="1" Grid.Column="1" Margin="0,4,0,0" Width="154" IsEditable="False" />
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
