<Window x:Class="Emu5.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Terminal" Height="746" Width="1080" Background="#FFF0F0F0" FontSize="13">
    <DockPanel>
        <TextBox Name="textBoxTerminal" DockPanel.Dock="Top" Margin="1" Background="Black" Foreground="Lime" FontFamily="Consolas" FontSize="15" Height="566" CaretBrush="Lime" IsReadOnlyCaretVisible="True" IsReadOnly="true" TextWrapping="NoWrap" HorizontalScrollBarVisibility="Disabled" PreviewMouseWheel="textBoxTerminal_PreviewMouseWheel" PreviewMouseDown="textBoxTerminal_PreviewMouseDown" PreviewMouseUp="textBoxTerminal_MouseUp" MouseUp="textBoxTerminal_MouseUp" PreviewKeyDown="textBoxTerminal_PreviewKeyDown" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <CheckBox Name="checkBoxEchoSentCharacters" Grid.Row="0" Grid.Column="0" IsChecked="True" Content="Echo sent characters" VerticalAlignment="Top" />
                <CheckBox Name="checkBoxBackspaceDeletesCharacters" Grid.Row="1" Grid.Column="0" IsChecked="True" Content="Backspace deletes characters" VerticalAlignment="Center" />
                <CheckBox Name="checkBoxNewLineSetsCaretTo0" Grid.Row="2" Grid.Column="0" IsChecked="True" Content="\n puts the caret to the beginning of the line" VerticalAlignment="Bottom" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="6, 6, 6, 0">
                <GroupBox Header="Input mode:">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <RadioButton Name="radioButtonKeyboard" Grid.Row="0" Grid.Column="0" IsChecked="True" Content="Keyboard" VerticalAlignment="Center" />
                        <RadioButton Name="radioButtonHex" Grid.Row="1" Grid.Column="0" IsChecked="False" Content="Hex" VerticalAlignment="Center" />
                        <RadioButton Name="radioButtonString" Grid.Row="2" Grid.Column="0" IsChecked="False" Content="String" VerticalAlignment="Center" />
                    </Grid>
                </GroupBox>
            </Grid>

            <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="6">
                <Button Name="buttonSent" DockPanel.Dock="Right" Content="Send" Width="50" IsEnabled="False" />
                <TextBox Name="textBoxInput" Margin="0, 0, 4, 0" IsEnabled="False" />
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
